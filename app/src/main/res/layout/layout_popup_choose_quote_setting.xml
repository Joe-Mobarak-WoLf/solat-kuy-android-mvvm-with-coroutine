<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        android:background="@color/dark_200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo_popup_quoteSetting"
            android:layout_width="@dimen/list_width_size"
            android:layout_height="@dimen/list_width_size"
            android:src="@drawable/ic__quote_24"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_popup_quoteSetting_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/select_the_quotes_from"
            android:textSize="@dimen/medium_text_size" />

        <RadioGroup
            android:id="@+id/rbg_quotesDataSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_fromApi"
                android:textColor="@color/white"
                android:text="@string/from_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_fromFavQuote"
                android:textColor="@color/white"
                android:text="@string/from_fav_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>

</layout>