<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/medium_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_700"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_quran_ayah_quote_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_gravity="center"
            tools:text="Extol thy Sustainer's limitless glory, and praise Him, and seek His forgiveness" />

        <TextView
            android:id="@+id/tv_quran_ayah_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            tools:text="Extol thy Sustainer's limitless glory, and praise Him, and seek His forgiveness: for, behold, He is ever an acceptor of repentance. - QS An-nasr ayat 3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin">

                <ImageView
                    android:id="@+id/iv_quote_setting"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_settings_24dp"/>

                <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/small_margin"
                    android:src="@drawable/ic_baseline_refresh_24"/>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>
